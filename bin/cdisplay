#!/bin/bash

# . rootlogin 534-12

show_help(){
  help="  NAME
    cdisplay - tool to display C tree related plots

  SYNOPSIS
    mdisplay [OPTION]... [FILE]

  DESCRIPTION 
     -r
        reference channel id
     -l
        use latest *M.root file in current folder
     -a
        advanced mode (more plots but needs more RAM)
     -p
        path for export (for -a 10)
     -i
        information string (for -a 10)
"
  echo "$help" 
}

OPTIND=1 
while getopts "h?r:la:p:i:" opt; do
    case "$opt" in
	h|\?)
            show_help
            exit 0
            ;;
	r)  refChannel=$OPTARG
	    ;;
	l)  latestFile=1
	    ;;
	a)  mode=$OPTARG
	    ;;
	p)  path=$OPTARG
	    ;;
	i)  info=$OPTARG
	    ;;
    esac
done
refChannel=${refChannel:-0}
mode=${mode:-0}
path=${path:-0}
info=${info:-0}
shift $((OPTIND-1))

fileName=$1
if [ $latestFile ]; then
    fileName=$(ls -t *M.root | head -1);
fi

if [ ! -f $fileName ] && [[ $fileName != *"*"* ]]; then
    echo "File $fileName not found. Exit"
    exit 0
fi

if [ ! $fileName ]; then
    show_help
    exit 0
fi

inFile=$(readlink -f $fileName)

if [ -z $1 ] && [ ! $latestFile  ]
then
    show_help
else
    if [ -d $HOME/dirc/prttools ]; then
	cd $HOME/dirc/prttools
    fi
    flags="-l"
    if [ $mode == 10 ]; then
	flags="-l -q"
    fi
    root  $flags loadprtlibs.C cdisplay.C+"(\"$inFile\",$refChannel,$mode,\"$path\",\"$info\")"
    cd -
fi
